<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Hospital"
    android:orientation="vertical"
    android:background="@color/transparent">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="266dp"
        android:importantForAccessibility="no"
        android:src="@drawable/hospital1" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:orientation="vertical">

        <TextView
            android:layout_width="200dp"
            android:layout_height="48dp"
            android:layout_gravity="center"
            android:layout_margin="19dp"
            android:background="@drawable/custom_button"
            android:fontFamily="@font/cd"
            android:gravity="center"
            android:importantForAccessibility="no"
            android:text="@string/contact_details2"
            android:textSize="25sp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:weightSum="2">

        <TextView
            android:layout_width="10dp"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:layout_weight="1"
            android:fontFamily="@font/te"
            android:gravity="center"
            android:importantForAccessibility="no"
            android:text="Toll Free number"
            android:textColor="#000000"
            android:textSize="20sp"
            android:textStyle="bold" />

        <TextView
            android:layout_width="10dp"
            android:layout_height="25dp"
            android:layout_margin="10dp"
            android:layout_weight="1"
            android:fontFamily="@font/te"
            android:importantForAccessibility="no"
            android:text="108"
            android:textColor="#000000"
            android:textSize="20sp"
            android:textStyle="bold" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="101dp"
        android:orientation="horizontal"
        android:weightSum="2">

        <TextView
            android:layout_width="0dp"
            android:layout_height="50dp"
            android:layout_margin="8dp"
            android:layout_weight="1"
            android:fontFamily="@font/te"
            android:importantForAccessibility="no"
            android:paddingLeft="20dp"
            android:text="Email id"
            android:textColor="#000000"
            android:textSize="20sp"
            android:textStyle="bold" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="50dp"
            android:layout_margin="8dp"
            android:layout_weight="1"
            android:fontFamily="@font/te"
            android:importantForAccessibility="no"
            android:text="ambulances@gmail.com"
            android:textColor="#000000"
            android:textSize="20sp"
            android:textStyle="bold" />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingTop="10dp"
        android:gravity="center">


    <ImageButton
        android:id="@+id/ambulancescall"
        android:layout_width="131dp"
        android:layout_height="55dp"
        android:src="@drawable/ic_call_black_24dp"

        android:importantForAccessibility="no"
        android:background="@drawable/custom_button2"
        />
    <ImageButton
        android:id="@+id/ambulancesnav"
        android:layout_width="131dp"
        android:layout_height="55dp"
        android:src="@drawable/ic_map_black_24dp"
        android:layout_marginLeft="40dp"
        android:importantForAccessibility="no"
        android:background="@drawable/custom_button2"
        />
    </LinearLayout>


</LinearLayout>